{
  "train_batch_size": 32,
  "train_micro_batch_size_per_gpu": 4,
  "gradient_accumulation_steps": 4,
  "steps_per_print": 50,
  "zero_optimization": {
    "stage": 3,
    "offload_optimizer": {
      "device": "cpu",
      "pin_memory": true
    },
    "offload_param": {
      "device": "cpu",
      "pin_memory": true
    },
    "overlap_comm": true,
    "contiguous_gradients": true,
    "reduce_bucket_size": 5e8,
    "stage3_prefetch_bucket_size": 5e7,
    "stage3_param_persistence_threshold": 1e6
  },
  "fp16": {
    "enabled": true,
    "loss_scale": 0,
    "loss_scale_window": 1000,
    "hysteresis": 2,
    "min_loss_scale": 1
  },
  "bf16": {
    "enabled": false
  },
  "optimizer": {
    "type": "AdamW",
    "params": {
      "lr": 0.0002,
      "betas": [0.9, 0.999],
      "eps": 1e-8,
      "weight_decay": 0.001
    }
  },
  "scheduler": {
    "type": "WarmupLR",
    "params": {
      "warmup_min_lr": 0,
      "warmup_max_lr": 0.0002,
      "warmup_num_steps": 1000
    }
  },
  "gradient_clipping": 1.0,
  "wall_clock_breakdown": false,
  "activation_checkpointing": {
    "partition_activations": true,
    "cpu_checkpointing": true,
    "contiguous_memory_optimization": true
  },
  "checkpoint": {
    "tag_validation_enabled": true,
    "partitioned_checkpoint": true,
    "save": "./ai/models/pixelated_empathy/checkpoints",
    "load": null,
    "num_checkpoints_to_keep": 3,
    "save_interval": 1000,
    "async_save": true,
    "secure_save": true
  },
  "tensorboard": {
    "enabled": false
  },
  "wandb": {
    "enabled": true,
    "project": "Pixel-LLM",
    "group": "distributed-training",
    "notes": "Production-grade ZeRO-3, HIPAA/GDPR: no sensitive data in logs or checkpoints"
  },
  "security": {
    "data_encryption": true,
    "log_redaction": true,
    "compliance": ["HIPAA", "GDPR"]
  }
}
