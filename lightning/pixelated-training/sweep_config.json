{
  "method": "bayes",
  "metric": {
    "name": "train_loss",
    "goal": "minimize"
  },
  "parameters": {
    "learning_rate": {
      "distribution": "log_uniform_values",
      "min": 1e-06,
      "max": 0.0001
    },
    "weight_decay": {
      "values": [
        0.01,
        0.05,
        0.1
      ]
    },
    "warmup_ratio": {
      "values": [
        0.05,
        0.1,
        0.15
      ]
    },
    "gradient_accumulation_steps": {
      "values": [
        4,
        8,
        16
      ]
    }
  },
  "early_terminate": {
    "type": "hyperband",
    "min_iter": 100
  }
}