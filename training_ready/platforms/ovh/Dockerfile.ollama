FROM ubuntu:22.04

ENV DEBIAN_FRONTEND=noninteractive \
    TZ=UTC \
    OLLAMA_HOST=0.0.0.0 \
    OLLAMA_PORT=11434 \
    OLLAMA_MODELS=/models \
    OLLAMA_PRELOAD_MODELS=""

RUN apt-get update && \
    apt-get install -y --no-install-recommends ca-certificates curl tini jq && \
    rm -rf /var/lib/apt/lists/*

RUN curl -fsSL https://ollama.com/install.sh | sh

# Create models directory - Ollama will use OLLAMA_MODELS env var
RUN useradd --system --shell /usr/sbin/nologin --home /models ollama && \
    mkdir -p /models && \
    chown -R ollama:ollama /models

COPY ai/ovh/ollama-entrypoint.sh /usr/local/bin/start-ollama.sh
RUN chmod +x /usr/local/bin/start-ollama.sh && \
    chown ollama:ollama /usr/local/bin/start-ollama.sh

USER ollama
VOLUME ["/models"]

EXPOSE 11434

ENTRYPOINT ["/usr/bin/tini","--","/usr/local/bin/start-ollama.sh"]

