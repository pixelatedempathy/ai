{
  "type": "object",
  "required": [
    "messages",
    "metadata"
  ],
  "properties": {
    "messages": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "role",
          "content"
        ],
        "properties": {
          "role": {
            "type": "string",
            "enum": [
              "system",
              "user",
              "assistant"
            ]
          },
          "content": {
            "type": "string"
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "required": [
        "source_family",
        "source_key",
        "content_hash",
        "pii_status",
        "license_tag",
        "split",
        "phase",
        "provenance"
      ],
      "properties": {
        "source_family": {
          "type": "string"
        },
        "source_key": {
          "type": "string"
        },
        "content_hash": {
          "type": "string",
          "pattern": "^sha256:[a-f0-9]{64}$"
        },
        "pii_status": {
          "type": "string",
          "enum": [
            "scrubbed",
            "none_detected",
            "requires_review"
          ]
        },
        "license_tag": {
          "type": "string"
        },
        "split": {
          "type": "string",
          "enum": [
            "train",
            "val",
            "test"
          ]
        },
        "phase": {
          "type": "string"
        },
        "conversation_length": {
          "type": "integer"
        },
        "total_tokens": {
          "type": "integer"
        },
        "quality_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "bias_flags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "provenance": {
          "type": "object",
          "required": [
            "original_s3_key",
            "processing_pipeline",
            "processed_at",
            "dedup_status"
          ],
          "properties": {
            "original_s3_key": {
              "type": "string"
            },
            "processing_pipeline": {
              "type": "string"
            },
            "processed_at": {
              "type": "string",
              "format": "date-time"
            },
            "dedup_status": {
              "type": "string"
            },
            "processing_steps": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}